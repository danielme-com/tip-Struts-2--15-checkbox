<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
	<!-- enable 'action' attribute -->
	<constant name="struts.mapper.action.prefix.enabled" value="false" />
	<!-- enable 'method' attribute -->
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />

	<package name="default" namespace="/" extends="struts-default">

		<action name="mainAction"
			class="com.danielme.tips.struts2.tip15.actions.MainAction">
			<result name="input">/jsp/form.jsp</result>			
		</action>
		
		<action name="submitData"
			class="com.danielme.tips.struts2.tip15.actions.MainAction" method="submit">			
			<result name="input">/jsp/form.jsp</result>			
		</action>	
		
	</package>

</struts>
